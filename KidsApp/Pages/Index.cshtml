@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KidsApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KidsApp.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f7f9fc;
            color: #333;
        }

        .navbar {
            background-color: #800000;
        }

        .navbar-nav .nav-item .nav-link {
            margin-right: 15px;
            color: #fff !important;
        }

        .cart-buttons {
            position: absolute;
            top: 0;
            right: 10px;
            display: flex;
            align-items: center;
        }

            .cart-buttons .btn {
                background-color: #8B0000;
                color: #fff;
                margin-left: 10px;
            }

        .carousel-item img {
            max-width: 100%;
            height: auto;
            max-height: 300px;
            margin: auto;
        }

        .card {
            border: none;
            background-color: #f9f9f9;
        }

        .card-title {
            color: #ff6600;
        }

        footer {
            background-color: #800000;
            color: #fff;
        }

        .social-buttons a {
            margin: 0 5px;
        }

        .carousel-inner .carousel-item {
            transition: transform 2s ease-in-out;
        }

        .product-image {
            max-width: 100%;
            height: auto;
            margin-top: 10px;
        }

        /* Quiz Styles */
        .quiz-container {
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 20px;
            margin-top: 20px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .quiz-question {
            font-weight: bold;
            margin-bottom: 10px;
        }

        .quiz-choices {
            margin-top: 10px;
        }

        .quiz-choice {
            display: block;
            padding: 8px 12px;
            margin-bottom: 5px;
            background-color: #f9f9f9;
            border: 1px solid #ccc;
            border-radius: 3px;
            cursor: pointer;
        }

            .quiz-choice:hover {
                background-color: #e9ecef;
            }

            .quiz-choice.selected {
                background-color: #007bff;
                color: #fff;
            }

        /* New Animations and Features */
        .animated-title {
            font-size: 1.5em;
            font-weight: bold;
        }

            .animated-title.bounce {
                animation: bounce 2s infinite;
            }

            .animated-title.spin {
                animation: spin 3s infinite linear;
            }

        .joke-riddle-container {
            margin-top: 20px;
            display: flex;
            justify-content: space-around;
        }

        .joke-riddle-card {
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            text-align: center;
            width: 45%;
        }

        .flip-card {
            background-color: transparent;
            width: 100%;
            height: 200px;
            perspective: 1000px;
        }

        .flip-card-inner {
            position: relative;
            width: 100%;
            height: 100%;
            text-align: center;
            transition: transform 0.6s;
            transform-style: preserve-3d;
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        }

        .flip-card:hover .flip-card-inner {
            transform: rotateY(180deg);
        }

        .flip-card-front, .flip-card-back {
            position: absolute;
            width: 100%;
            height: 100%;
            -webkit-backface-visibility: hidden;
            backface-visibility: hidden;
        }

        .flip-card-front {
            background-color: #bbb;
            color: black;
        }

        .flip-card-back {
            background-color: #2980b9;
            color: white;
            transform: rotateY(180deg);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">KidsApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Products/Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Apps/Index">Apps</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Inquiry/Index">Inquiry</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                    <div class="cart-buttons">
                        <a asp-page="/Cart/Index" class="btn btn-lg">View Cart</a>
                        <a asp-page="/Checkout/Index" class="btn btn-lg">Proceed to Checkout</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h1 class="display-4 mt-5">Welcome to Kidz-Apps</h1>
                <p class="lead">Explore educational products and healthy eating options for kids.</p>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-md-12">
                <!-- Quote Carousel -->
                <div id="quoteCarousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <blockquote class="blockquote text-center">
                                <p class="mb-0">"Education is the most powerful weapon which you can use to change the world." - Nelson Mandela</p>
                            </blockquote>
                        </div>
                        <div class="carousel-item">
                            <blockquote class="blockquote text-center">
                                <p class="mb-0">"The beautiful thing about learning is that nobody can take it away from you." - B.B. King</p>
                            </blockquote>
                        </div>
                        <div class="carousel-item">
                            <blockquote class="blockquote text-center">
                                <p class="mb-0">"The greatest wealth is health." - Virgil</p>
                            </blockquote>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-md-12">
                <!-- Image Carousel -->
                <div id="imageCarousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="https://media.licdn.com/dms/image/C5612AQFX__cw1FfBVg/article-cover_image-shrink_720_1280/0/1570560464908?e=2147483647&v=beta&t=pOTWbpXRpyA9rqZzWxb4_38sRcvtcqIOvMa-KBWcu8k" class="d-block w-80" alt="Image 1">
                        </div>
                        <div class="carousel-item">
                            <img src="https://www.nmamilife.com/wp-content/uploads/2021/01/27-jan-blog.png" class="d-block w-80" alt="Image 2">
                        </div>
                        <div class="carousel-item">
                            <img src="https://cdn-ca.dg1.services/6/1135/5745/o/Asset%203_12.png" class="d-block w-80" alt="Image 3">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#imageCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#imageCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-md-12">
                <!-- Featured Products and Apps -->
                <div class="card mb-3">
                    <div class="card-body text-center">
                        <p class="card-text"></p>
                        <div class="row">
                            <div class="col-md-6">
                                <!-- Featured Products -->
                                <div class="card mb-3">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Products</h5>
                                        <p class="card-text">Explore our range of educational products designed to engage and inspire young learners.</p>
                                        <a asp-page="/Products/Index" class="btn btn-primary">View Products</a>
                                        <br /><br />
                                        <img src="https://m.media-amazon.com/images/I/71P8z7yQCgS._AC_UF894,1000_QL80_.jpg" class="card-img-top product-image" alt="Product 1">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <!-- Featured Apps -->
                                <div class="card mb-3">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Apps</h5>
                                        <p class="card-text">Take a look at our amazing apps.</p>
                                        <a asp-page="/Apps/Index" class="btn btn-primary">View Apps</a>
                                        <br /><br />
                                        <img src="https://hips.hearstapps.com/hmg-prod/images/best-kid-apps-1648567497.jpg?crop=1.00xw:0.502xh;0,0.251xh&resize=1200:*" class="card-img-top product-image" alt="Product 2">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-md-12 text-center">
                <!-- Mission Statement -->
                <h3>Our Mission</h3>
                <p class="lead">To empower children through engaging educational apps and promote healthy eating habits.</p>
                <p>We believe that learning should be fun and interactive, fostering curiosity and a love for knowledge from an early age. Our apps are designed to make education accessible and enjoyable, with a focus on healthy living. Join us in our mission to nurture the next generation of healthy, well-rounded, and curious learners.</p>
                <p>Through our products, we aim to provide educational tools that are both effective and entertaining, encourage healthy eating habits with fun and engaging content, support parents and educators in their teaching efforts, ensure a safe and positive digital environment for children, and promote lifelong learning and development.</p>
            </div>
        </div>

        <!-- Quiz Section -->
        <div class="row mt-5">
            <div class="col-md-12">
                <div class="quiz-container">
                    <h3 class="text-center">Test Your Knowledge!</h3>
                    <div class="quiz-question">
                        What is the healthiest food for kids?
                    </div>
                    <div class="quiz-choices">
                        <div class="quiz-choice" data-answer="a">Apple</div>
                        <div class="quiz-choice" data-answer="b">Chocolate</div>
                        <div class="quiz-choice" data-answer="c">Potato Chips</div>
                    </div>
                    <div class="text-center mt-3">
                        <button class="btn btn-primary" id="quiz-submit">Submit Answer</button>
                    </div>
                    <div class="mt-3 text-center" id="quiz-result"></div>
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-md-12 text-center">
                <h2 class="animated-title bounce">Jokes and Riddles</h2>
            </div>
        </div>

        <div class="row joke-riddle-container">
            <div class="col-md-6">
                <div class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                            <h3>Joke</h3>
                            <p>Why don't scientists trust atoms?</p>
                        </div>
                        <div class="flip-card-back">
                            <p>Because they make up everything!</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                            <h3>Riddle</h3>
                            <p>I speak without a mouth and hear without ears. I have no body, but I come alive with wind. What am I?</p>
                        </div>
                        <div class="flip-card-back">
                            <p>An Echo</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-md-12">
                <!-- Contact Us -->
                <div class="card mb-3">
                    <div class="card-body text-center">
                        <h5 class="card-title">Contact Us</h5>
                        <p class="card-text">Have questions? Contact us directly. We are here to help you with any inquiries you may have about our products, services, or any other questions. Our customer service team is dedicated to providing you with the best support possible. Reach out to us via phone, email, or through our online contact form. We look forward to hearing from you!</p>
                        <div class="social-buttons">
                            <a href="https://www.facebook.com" class="btn btn-primary" target="_blank">Facebook</a>
                            <a href="https://www.twitter.com" class="btn btn-info" target="_blank">Twitter</a>
                            <a href="https://www.instagram.com" class="btn btn-danger" target="_blank">Instagram</a>
                            <a href="https://www.tiktok.com" class="btn btn-primary" target="_blank">TikTok</a>
                        </div>
                        <a asp-page="/Inquiry/Index" class="btn btn-primary mt-3">Contact Us</a>
                    </div>
                </div>
            </div>
        </div>

        <footer class="mt-5 p-4 text-center">
            <p>&copy; 2024 Kidz-Apps. All rights reserved.</p>
            <div class="social-buttons">
                <a href="#" class="btn btn-primary">Facebook</a>
                <a href="#" class="btn btn-info">Twitter</a>
                <a href="#" class="btn btn-danger">YouTube</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const choices = document.querySelectorAll('.quiz-choice');
            let selectedAnswer = null;

            choices.forEach(choice => {
                choice.addEventListener('click', function () {
                    // Remove 'selected' class from all choices
                    choices.forEach(c => c.classList.remove('selected'));
                    // Add 'selected' class to the clicked choice
                    this.classList.add('selected');
                    // Store the selected answer
                    selectedAnswer = this.getAttribute('data-answer');
                });
            });

            document.getElementById('quiz-submit').addEventListener('click', function () {
                const resultDiv = document.getElementById('quiz-result');
                const correctAnswer = 'a'; // Apple is the correct answer

                if (selectedAnswer === correctAnswer) {
                    resultDiv.textContent = 'Correct! Apple is the healthiest food for kids.';
                    resultDiv.style.color = 'green';
                } else if (selectedAnswer) {
                    resultDiv.textContent = 'Incorrect. The correct answer is Apple.';
                    resultDiv.style.color = 'red';
                } else {
                    resultDiv.textContent = 'Please select an answer.';
                    resultDiv.style.color = 'orange';
                }
            });
        });
    </script>
</body>
</html>

